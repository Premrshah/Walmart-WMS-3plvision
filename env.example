# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Optional: Supabase Service Role Key (for server-side operations)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# App environment (optional, shows DEV badge/banner when not production)
NEXT_PUBLIC_APP_ENV=production

# App URL (required for OAuth redirects)
NEXT_PUBLIC_APP_URL=http://localhost:3002

# Dropbox (KYC File Requests) - OAuth 2.0 Authorization Code Flow
DROPBOX_APP_KEY=your_dropbox_app_key_here
DROPBOX_APP_SECRET=your_dropbox_app_secret_here
DROPBOX_REDIRECT_URI=http://localhost:3002/api/dropbox/callback
DROPBOX_KYC_PARENT_FOLDER=/3PLVision/KYC-Uploads

# Email Configuration (for sending signed agreements)
EMAIL_USER=info@3plvision.com
EMAIL_PASS=your_email_app_password_here
